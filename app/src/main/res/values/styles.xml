<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="progressDialogTheme">progressDialogTheme</style>
    <style name="Arial">
        <item name="fontFamily">@font/arial</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="Arial.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Arial.Gray_27">
        <item name="android:textColor">@color/gray_27</item>
    </style>

    <style name="Arial.Gray_42">
        <item name="android:textColor">@color/gray_42</item>
    </style>


    <style name="Arial.Bold.Gray_27">
        <item name="android:textColor">@color/gray_27</item>
    </style>

    <style name="Arial.Bold.Gray_42">
        <item name="android:textColor">@color/gray_42</item>
    </style>

    <style name="textInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/arial</item>
        <item name="singleLine">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHint">@color/gray_27</item>
        <item name="android:background">@drawable/background_edittext</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/dimen_48dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/colorPrimaryBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="fontFamily">@font/arial</item>
        <item name="textAllCaps">false</item>
    </style>



</resources>